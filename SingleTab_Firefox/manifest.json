{
    "manifest_version": 2,
    "name": "Single Tab",
    "version": "1.0",

    "description": "Blocks the opening of external tabs",
    "homepage_url": "https://github.com/kdrvs/SingleTab",

    "icons": {
        "16": "icons/16.png",
        "32": "icons/32.png",
        "48": "icons/48.png",
        "128": "icons/128.png"

    },

    "permissions": [
        "activeTab",
        "storage",
        "<all_urls>"
    ],

    "browser_action": {
        "default_title": "Single Tab",
        "default_popup": "popup.html"
    },

    "applications": {
        "gecko": {
            "id": "SingleTab@kdrvs",
            "strict_min_version": "45.0"
        }
    },

    "content_scripts": [
        {
            "matches": ["*://*/*"],
            "js": ["main.js"]
        }
    ]

}