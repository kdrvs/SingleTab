{
    "manifest_version": 3,
    "name": "Single Tab",
    "version": "1.0",

    "description": "Blocks the opening of external tabs",
    "homepage_url": "https://github.com/kdrvs/SingleTab",

    "icons": {
        "16": "icons/16.png",
        "32": "icons/32.png",
        "48": "icons/48.png",
        "128": "icons/128.png"

    },

    "permissions": [
        "activeTab",
        "storage"
    ],

    "action": {
        "default_popup": "popup.html",
        "default_icon" : {
            "16": "icons/16.png",
            "32": "icons/32.png",
            "48": "icons/48.png",
            "128": "icons/128.png"

        }
    },

    "content_scripts": [
        {
            "matches": ["*://*/*"],
            "js": ["main.js"]
        }
    ]

}